<MainWindow>:
    tb: tb
    mtb: mtb
    gx:gx
    up:up
    vo:vo
    fl:fl

    FloatLayout:
        id:fl
        Label:
            text: "Welcome To the Secure Share System!"
            size_hint:0.1, 0.05
            pos_hint:{"x":0.2, "y": 0.91}
        TextInput:
            id: tb
            size_hint:0.82, 0.7
            pos_hint:{"x":0.05, "y": 0.2}
            is_focusable: False
        TextInput:
            id: mtb
            multiline: False
            size_hint:0.82, 0.15
            pos_hint:{"x":0.05, "y": 0.05}
            write_tab: False
            input_filter: lambda text, from_undo: text[:999 - len(self.text)]
            on_text_validate:
                root.write()

        Button:
            id:up
            text: "Upload File"
            size_hint: 0.1, 0.05
            pos_hint:{"x":0.88, "y": 0.05}
            font_size: 14
            on_release:
                root.sendFile()
        Button:
            text:"Leave Room"
            pos_hint:{"x":0.88, "y": 0.11}
            size_hint: 0.1,0.05
            font_size: 14
            on_release:
                root.leave()
        Button:
            id:vo
            text:"Join Voice"
            pos_hint:{"x":0.88, "y": 0.18}
            size_hint: 0.1,0.05
            font_size: 14
            on_release:
                root.voice()
        ScrollView:
            size_hint: 0.1, 0.4
            pos_hint: {"x":0.88, "top": 0.9}
            GridLayout:
                id:gx
                cols:1
                size_hint_y: None
                row_default_height: '20dp'
                row_force_default: True
                spacing: 0, 0
                padding: 0, 0
                Label:
                    text:"File Repo:"
                    font_size: 14

<AuthScreen>:
    inpu: inpu
    gb:gb
    bt:bt

    Button:
        id:gb
        text:"Go Back"
        on_release: root.goback()
        pos_hint:{"x":0, "top": 1}
        size_hint: 0.2, 0.1
    Label:
        text:"We Sent You a Code in The Email, Just To Verify(Check Your Inbox and Spam!):"
        pos_hint:{"x":0, "top": 0.61}
        size_hint: 0.3, 0.1
    Button:
        id:bt
        text:"OK"
        pos_hint:{"x":0.5, "top": 0.5}
        size_hint: 0.5,0.1
        on_release: root.auth()
    TextInput:
        id:inpu
        input_filter: lambda text, from_undo: text[:6 - len(self.text)]
        pos_hint:{"x":0, "top": 0.5}
        size_hint: 0.5,0.1
        write_tab: False
